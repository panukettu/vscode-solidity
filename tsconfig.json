{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "out",
    "target": "es2020",
    "lib": ["es2020"],
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "checkJs": true,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode-test"]
}
