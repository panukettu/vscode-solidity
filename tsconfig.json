{
	"compilerOptions": {
		"module": "commonjs",
		"outDir": "out",
		"target": "ES2022",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"declaration": false,
		"experimentalDecorators": true,
		"skipLibCheck": false,
		"skipDefaultLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"baseUrl": "./",
		"checkJs": true,
		"allowJs": true,
		"paths": {
			"@client": [
				"src/client"
			],
			"@client/*": [
				"src/client/*"
			],
			"@server": [
				"src/server"
			],
			"@server/*": [
				"src/server/*"
			],
			"@shared": [
				"src/shared"
			],
			"@shared/*": [
				"src/shared/*"
			]
		}
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}