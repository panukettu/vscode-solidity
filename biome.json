{
	"$schema": "https://biomejs.dev/schemas/1.3.1/schema.json",
	"files": {
		"include": ["src"],
		"ignore": ["out"]
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	},
	"organizeImports": {
		"enabled": true,
		"ignore": ["src/extension.ts"]
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"formatter": {
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noPrototypeBuiltins": "off",
				"noAssignInExpressions": "off"
			},
			"complexity": {
				"noForEach": "off"
			},
			"style": {
				"noParameterAssign": "off"
			}
		}
	}
}
